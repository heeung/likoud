<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_sky_blue"
    android:padding="@dimen/_10sdp"
    android:paddingStart="@dimen/_6sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingEnd="@dimen/_6sdp"
    android:paddingBottom="@dimen/_6sdp"
    tools:context=".ui.aftercloudvalid.AfterCloudValidFragment">

<!--    <androidx.cardview.widget.CardView-->
<!--        android:id="@+id/layout_chosen_photo"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="match_parent"-->
<!--        a-->
<!--        android:background="@color/transparent"-->
<!--        android:backgroundTint="@color/transparent"-->
<!--        -->
<!--        >-->

        <ImageView
            android:translationZ="0dp"
            android:id="@+id/image_chosen_photo"
            android:elevation="@dimen/_2sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitCenter" />

<!--    </androidx.cardview.widget.CardView>-->

    <LinearLayout
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:id="@+id/button_upload_only"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_gravity="right"
        android:background="@drawable/frame_button_grey_mild"
        android:elevation="@dimen/_2sdp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            style="@style/Theme.AppCompat.TextView.jua.dark.Size12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/upload_only" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_draw_instantly"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_gravity="right"
        android:background="@drawable/frame_button_yellow_mild_200"
        android:elevation="@dimen/_2sdp"
        android:gravity="center"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@+id/button_upload_only"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            style="@style/Theme.AppCompat.TextView.jua.dark.Size12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/draw_instantly" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
