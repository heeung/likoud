<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_sky_blue">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/layout_appbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        android:background="@color/main_sky_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/button_back"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/button_back_arrow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/profile_select"
                android:textSize="46dp"
                android:layout_marginTop="10dp"
                style="@style/Theme.AppCompat.TextView.jua.dark.Size32"/>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_appbar">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.8"
            app:layout_constraintWidth_percent="0.45"

            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image_profile_now"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/profile_water_drop_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="이영준"
                style="@style/Theme.AppCompat.TextView.pretendard.Size12"
                android:textSize="60dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.55"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="600dp"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/waterDropWhite"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/profile_water_drop_white" />

                <ImageView
                    android:id="@+id/waterDropPurple"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/profile_water_drop_purple" />

                <ImageView
                    android:id="@+id/waterDropMint"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/profile_water_drop_mint" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="600dp"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/waterDropBlue"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/profile_water_drop_blue" />

                <ImageView
                    android:id="@+id/waterDropOrange"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/profile_water_drop_orange" />

                <ImageView
                    android:id="@+id/waterDropRed"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/profile_water_drop_red" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="600dp"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/waterDropGreen"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/profile_water_drop_green" />

                <ImageView
                    android:id="@+id/waterDropPink"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/profile_water_drop_pink" />

                <ImageView
                    android:id="@+id/waterDropLemon"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/profile_water_drop_lemon" />

            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>